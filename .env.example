# Host User ID and Group ID (for file permission mapping)
# Run `id -u` and `id -g` on your host machine to get these values
HOST_UID=1000
HOST_GID=1000

# Backend Settings
BACKEND_PORT=8000

# Frontend Settings
FRONTEND_PORT=7860

# Database Settings
DATABASE_TYPE=postgresql
DB_HOST=postgres
DB_PORT=5432
DB_NAME=teamwork
DB_USERNAME=teamwork_user
DB_PASSWORD=teamwork_pass

# SQLite (if DATABASE_TYPE=sqlite)
SQLITE_PATH=/app/data/db/teamwork.db

# LLM Settings
LLM_API_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your-api-key-here
LLM_MODEL_NAME=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=60

# Logging
LOG_LEVEL=INFO

# File Paths
UPLOAD_DIR=/app/data/uploads
OUTPUT_DIR=/app/data/outputs
